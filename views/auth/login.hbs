<div class="auth">
  <div class="row">
    <div class="col s12">
      <ul class="tabs">
        <li class="tab col s6"><a class="active" href="#login">Login</a></li>
        <li class="tab col s6"><a href="#register">Registration</a></li>
      </ul>
    </div>
    <div id="login" class="col s6 offset-s3">
      {{#if loginError}}
        <p class="alert">{{loginError}}</p>
      {{/if}}
      <h3>Enter to store</h3>
      <form method="POST" action="/auth/login">
        <div class="row">
          <div class="input-field">
            <input id="email" name="email" type="email" class="validate" required>
            <label for="email">Email</label>
            <span class="helper-text" data-error="Enter a email"></span>
          </div>
        </div>
        <div class="row">
          <div class="input-field">
            <input id="password" type="password" name="password" class="validate" required>
            <label for="password">Password</label>
            <span class="helper-text" data-error="Enter a password"></span>
          </div>
        </div>
        <input type="hidden" name="_csrf" value="{{csrf}}" />
        <button class="btn btn-priimary" type="submit">Login</button>
      </form>
    </div>
    <div id="register" class="col s6 offset-s3">
      {{#if registerError}}
        <p class="alert">{{registerError}}</p>
      {{/if}}
      <h3>Create an account</h3>
      <form method="POST" action="/auth/register">
        <div class="row">
          <div class="input-field">
            <input id="remail" name="email" type="email" class="validate" required>
            <label for="remail">Email</label>
            <span class="helper-text" data-error="Enter a email"></span>
          </div>
        </div>
        <div class="row">
          <div class="input-field">
            <input id="rpassword" type="password" name="password" class="validate" required>
            <label for="rpassword">Password</label>
            <span class="helper-text" data-error="Enter a password"></span>
          </div>
        </div>
        <div class="row">
          <div class="input-field">
            <input id="confirm" type="password" name="repeat" class="validate" required>
            <label for="confirm">Repeat password</label>
            <span class="helper-text" data-error="Enter a password"></span>
          </div>
        </div>
        <div class="row">
          <div class="input-field">
            <input id="name" type="text" name="name" class="validate" required>
            <label for="name">Name</label>
            <span class="helper-text" data-error="Enter a name"></span>
          </div>
        </div>
        <input type="hidden" name="_csrf" value="{{csrf}}" />
        <button class="btn btn-priimary" type="submit">Register</button>
      </form>
    </div>
  </div>
</div>
