<h1>Add course</h1>
<form method="POST" action="/add_course">
  <div class="row">
    <div class="input-field">
      <input id="title" name="title" type="text" class="validate" required>
      <label for="title">Course name</label>
      <span class="helper-text" data-error="wrong"></span>
    </div>
  </div>
  <div class="row">
    <div class="input-field">
      <input id="price" type="number" name="price" class="validate" required>
      <label for="price">Price</label>
      <span class="helper-text" data-error="wrong"></span>
    </div>
  </div>
  <div class="row">
    <div class="input-field">
      <input id="image" type="text" name="image" class="validate" required>
      <label for="image">Image URL</label>
      <span class="helper-text" data-error="wrong"></span>
    </div>
  </div>
  <button class="btn btn-priimary">Add course</button>
</form>
